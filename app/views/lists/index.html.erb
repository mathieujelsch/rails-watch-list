<h1>Index</h1>

<h2>Voici les listes de genres</h2>
  <div class="cards-list">

<% @lists.each do |list|%>
  <%= link_to list_path(list) do %>
    <div class="card-category-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fit if list.photo.attached? %>)">
      <p><%= list.name %></p>
    </div>
  <% end %>
<% end %>
  </div>

<%= link_to "Ajoute une liste", new_list_path %>
